{
  "Hosting": {
    //如果您的主机使用负载平衡器，请将以下设置设置为“true”。 它将被用来确定当前的请求是否是HTTPS
    "UseHttpClusterHttps": false,
    "UseHttpXForwardedProto": false,

    //如果您的主机不使用“X-FORWARDED-FOR”标题确定IP地址，请使用下面的设置。
    //在某些情况下，服务器使用其他HTTP标头。 你可以在这里指定一个自定义的HTTP头。 例如CF-Connecting-IP，X-FORWARDED-PROTO等
    "ForwardedHttpHeader": ""
  },

  "Nop": {
    //如果要在生产环境中查看完整的错误，请启用。 它在开发环境中被忽略（始终启用）
    "DisplayFullErrorStack": false,

    //静态内容的“Cache-Control”标头值的值
    "StaticFilesCacheControl": "public,max-age=604800",

    //指示是否压缩响应（默认为gzip）
    //例如，您可能希望将其禁用，如果您在服务器级别配置了活动的IIS动态压缩模块
    "UseResponseCompression": false,

    //Windows Azure BLOB存储。
    //在此指定您的连接字符串，容器名称，BLOB存储的结束点
    "AzureBlobStorageConnectionString": "",
    "AzureBlobStorageContainerName": "",
    "AzureBlobStorageEndPoint": "",

    //Redis支持（由web farm，Azure等使用）。
    //通过https://azure.microsoft.com/zh-CN/documentation/articles/cache-dotnet-how-to-use-azure-redis-cache/查找更多信息
    "RedisCachingEnabled": false,
    "RedisCachingConnectionString": "127.0.0.1:6379,ssl=False",
    "PersistDataProtectionKeysToRedis": false,

    //您可以在http://browscap.org/上获取最新版本的用户代理字符串
    //如果要使用完整版本的“browscap.xml”文件，请将“CrawlersOnlyDatabasePath”属性留空
    "UserAgentStringsPath": "~/App_Data/browscap.xml",
    "CrawlerOnlyUserAgentStringsPath": "~/App_Data/browscap.crawlersonly.xml",

    //如果您没有从以前的版本升级，请将下面的设置设置为“false”。 它可以稍微改善性能
    "SupportPreviousNopcommerceVersions": true,

    //不要编辑这个元素。 仅适用于高级用户
    "DisableSampleDataDuringInstallation": false,
    "UseFastInstallationService": false,
    "PluginsIgnoredDuringInstallation": "",

    //指示是否忽略启动任务
    "IgnoreStartupTasks": false,

    //如果要在应用程序启动时清除/ Plugins / bin目录，请启用
    "ClearPluginShadowDirectoryOnStartup": true,

    ///如果要将程序集加载到加载上下文中，请启用，绕过一些安全检查
    "UseUnsafeLoadAssembly": true
  }
}
